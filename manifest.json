{
  "manifest_version": 3,
  "name": "API Token Generator",
  "version": "1.0",
  "description": "Enter a Quote ID, get a URL.",
  "permissions": [
    "clipboardWrite",
    "tabs",
    "scripting", 
    "activeTab"
  ],
  "host_permissions": [
    "https://elephantsfoot-consultant-online-quote-form.vercel.app/*",
    "<all_urls>"
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  }
}